<Defs>
  <!-- ===================================== Refine Normal Steel ======================================== -->
  <RecipeDef>
    <defName>PRF_MakeSteelCoal</defName>
    <label>Refine Steel with coal</label>
    <description>An alloy af iron and carbon, steel is more resistant to rust and stronger than iron.</description>
    <jobString>Alloying steel.</jobString>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <workAmount>6500</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>PRF_Iron</li>
          </thingDefs>
        </filter>
        <count>70</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>PRF_Coal</li>
          </thingDefs>
        </filter>
        <count>30</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>PRF_Iron</li>
        <li>PRF_Coal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Steel>70</Steel>
    </products>
    <researchPrerequisite>Smithing</researchPrerequisite>
    <recipeUsers>
      <li>PRF_FueledStoneSmelter</li>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>

