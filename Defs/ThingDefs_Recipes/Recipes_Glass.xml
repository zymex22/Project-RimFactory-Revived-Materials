<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ===================================== Basic Glass ======================================== -->
	<RecipeDef>
		<defName>PRF_MakeBasicGlass</defName>
		<label>make glass</label>
		<description>Smelt sand into basic glass.</description>
		<jobString>Making glass.</jobString>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_RawSand</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<PRF_Glass>5</PRF_Glass>
		</products>
		<workAmount>1100</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.5</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_Research_BasicGlass</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li>PRF_FueledStoneSmelter</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>PRF_MakeBasicGlassBulk</defName>
		<label>make bulk glass</label>
		<description>Smelt lots of sand into lots of basic glass.</description>
		<jobString>Making glass.</jobString>
		<allowMixingIngredients>false</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_RawSand</li>
					</thingDefs>
				</filter>
				<count>90</count>
			</li>
		</ingredients>
		<products>
			<PRF_Glass>50</PRF_Glass>
		</products>
		<workAmount>5000</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.5</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_Research_BasicGlass</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>



	<!-- ===================================== Reinforced Glass ======================================== -->
