			<li>
				<filter>
					<thingDefs>
						<li>PRF_RawSand</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<PRF_RGlass>5</PRF_RGlass>
		</products>
		<workAmount>1600</workAmount>
