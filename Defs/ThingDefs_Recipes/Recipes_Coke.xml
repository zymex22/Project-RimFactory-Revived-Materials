<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<!-- ===================================== Coal Coke ======================================== -->
	<RecipeDef>
		<defName>PRF_MakeCoke</defName>
		<label>make coke coal</label>
		<description>By burning coal anaerobically it can be turned into a pure carbon based fuel that has little to no impurities.</description>
		<jobString>Making coke.</jobString>
		<allowMixingIngredients>false</allowMixingIngredients>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_Coal</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<PRF_Coke>20</PRF_Coke>
		</products>
		<workAmount>1000</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.75</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_Research_CokeProduction</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li>PRF_FueledStoneSmelter</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>PRF_MakeCokeBulk</defName>
		<label>make bulk coke coal</label>
		<description>Thanks to the retractable airtight door and larger interior space, more coke coal can be made inside the electric kiln.</description>
		<jobString>Making coke.</jobString>
		<allowMixingIngredients>false</allowMixingIngredients>
		<skillRequirements>
			<Crafting>10</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>PRF_Coal</li>
					</thingDefs>
				</filter>
				<count>150</count>
			</li>
		</ingredients>
		<products>
			<PRF_Coke>200</PRF_Coke>
		</products>
		<workAmount>5000</workAmount>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.75</workSkillLearnFactor>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<researchPrerequisite>PRF_Research_CokeProduction</researchPrerequisite>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li>PRF_FueledStoneSmelter</li>
		</recipeUsers>
	</RecipeDef>

</Defs>
