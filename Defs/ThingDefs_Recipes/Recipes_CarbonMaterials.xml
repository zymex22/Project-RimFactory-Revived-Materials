	<RecipeDef>
		<defName>PRF_MakeCharcoal</defName>
		<label>make charcoal</label>
		<description>Burn wood in order to obtain charcoal, a substitute for coal for when you can't mine it.</description>
		<jobString>Grounding rocks into rock powder.</jobString>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<workAmount>700</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>ElectricSmelter</li>
		</recipeUsers>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>WoodLog</li>
			  </thingDefs>
			</filter>
			<count>30</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>WoodLog</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <PRF_Coal>10</PRF_Coal>
		</products>
		<researchPrerequisite>Stonecutting</researchPrerequisite>
	</RecipeDef>

